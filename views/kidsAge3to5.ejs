<!DOCTYPE html>
<html>

<head>
  <link crossorigin="anonymous" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-alpha.6/css/bootstrap.min.css" integrity="sha384-rwoIResjU2yc3z8GV/NPeZWAv56rSmLldC3R/AZzGRnGxQQKnKkoFVhFQhNUwEyJ" rel="stylesheet">
  <title>Tyke TV - Videos and Games</title>
  <link href="../stylesheets/kidsAge3to5.css" rel="stylesheet" type="text/css" />
  <link href="../stylesheets/Logoutcss.css" rel="stylesheet" type="text/css" />
  <link href="https://fonts.googleapis.com/css?family=Chewy" rel="stylesheet">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.0/jquery.min.js"></script>
  <meta content="width=device-width, initial-scale=1.0" name="viewport" />
  <script src="../javascripts/dropdown1.js"></script>
  <script src="../javascripts/Mascotchange.js"></script>
  <script src="../javascripts/vidpopup.js"></script>
  <script src="../javascripts/kidsAge3to5.js"></script>
</head>

<body>
  <div id="page">
    <div class="header">
      <h1 class="title"><a href="/selectaccount.htm">Tyke TV</a></h1>
      <div class="dragon-logo"> <img id="dragon-img" class="img-responsive" src="https://res.cloudinary.com/dqn5eqmwt/image/upload/v1492759791/dragon_parent_3_zbghmt.png" /> </div>

      <!-- This div creates a dropdown menu with various navigation options -->
      <div class="menu"> <img id="menu_img" onclick="myFunction()" src="https://res.cloudinary.com/dqn5eqmwt/image/upload/v1493014197/Menu_jwzusk.svg">
        <div id="myDropdown" class="dropdown-content"> <a id="Edprof">Edit Profile</a> <a id="Deprof">Delete Profile</a> <a id="Chistory">Check History</a> <a id="Bevents">Book Events</a> <a id="Getout">Logout</a> </div>
      </div>
    </div>
    <div class="section">

      <!-- Search bar for the kids/parents to search based on keywords -->
      <input id="search" name="search" placeholder="Search.." type="text">

      <!-- This div contains a different section that provides easier access to the videos you have already watched  -->
      <div id="viewHistory" class="history-section">
        <p>Play Again!</p>
        <ul class="vid-list">
          <!--will be inserting videos here dynamically-->
        </ul>
      </div>
      <div class="lower-section">

        <!-- A vertical Section to browse videos and games separately (with vertical scroll) -->
        <div class="video-section">
          <p class="video-section-header">VIDEOS</p>
          <ul class="vertical-list">
            <!--will be inserting videos here dynamically-->
          </ul>
        </div>
        <div class="games-section">
          <p class="games-section-header">GAMES</p>
          <ul class="vertical-list">
            <!--will be inserting videos here dynamically-->
          </ul>
        </div>

        <!-- For mobile phones, vertical scrolling can be cumbersome and not intuitive. Therefore we have a section with the same content but with horizontal scrolling-->
        <div class="horizontal-video-section">
          <p class="video-section-header">VIDEOS</p>
          <ul class="vid-list">
            <!--will be inserting videos here dynamically-->
          </ul>
        </div>
        <div class="horizontal-games-section">
          <p class="games-section-header">GAMES</p>
          <ul class="vid-list">
            <!--will be inserting videos here dynamically-->
          </ul>
        </div>
      </div>
    </div>
    <div class="footer">
      <p>Copyright@TykeTV.com</p>
    </div>

    <!-- Code for creating a popup div which contains an image confirming if you want to logout or not -->
    <div id="popup3" class="popuplg"> <img class="dragon" src="https://res.cloudinary.com/dqn5eqmwt/image/upload/v1492759790/dragon_baby_3_vnpp58.png">
      <p> Are you leaving me? </p>
      <div class="buttons">
        <button type="button" class="btn-yes" id="yes-button">
          <p class="button">Yes</p>
        </button>
        <button type="button" class="btn-no" id="no-button" onclick="cancellogout()">
          <p class="button">No</p>
        </button>
      </div>
    </div>

    <!-- Code for creating a popup in which you can view videos and games (within an iframe) -->
    <div id="popup2" class="popup">
      <iframe id="vid_frame" frameborder="0" height="315" src="" width="560" allowscriptaccess="always"> </iframe>
      <a class="close" href="#" onclick="toggleVideo('hide')"> <img id="close-icon" src="https://res.cloudinary.com/dqn5eqmwt/image/upload/v1493014196/info-close-icon_fdcokj.png">
      </a>
    </div>
  </div>
</body>

</html>
